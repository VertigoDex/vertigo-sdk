{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": false,
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": ["src/**/*", "target/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
